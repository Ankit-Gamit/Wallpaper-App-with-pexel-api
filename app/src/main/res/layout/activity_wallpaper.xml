<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WallpaperActivity">

    <ImageView
        android:id="@+id/wallpaperActivityImgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"

        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progBarWallpaper"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btnSetWallpaper"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Set Wallpaper"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:backgroundTint="#73E0ED"
        android:textSize="15sp"/>

    <Button
        android:layout_alignLeft="@+id/btnSetWallpaper"
        android:layout_alignEnd="@+id/btnSetWallpaper"
        android:id="@+id/btnSaveWallpaper"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Save"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:backgroundTint="#73E0ED"
        android:textSize="15sp"/>
</RelativeLayout>